@using CadastroFornecedores.Extensions
@model CadastroFornecedores.ViewModels.FornecedorViewModel
@{
    ViewData["Title"] = "Informações";
}

<h1 style="padding-top: 50px">@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Documento)
            </dt>
            <dd>
                @this.FormataDocumento(Model.TipoFornecedor, Model.Documento)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="text-center">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
    </div>
</div>