@model CadastroFornecedores.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Produtos";
 }

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Novo Fornecedor</a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <td>
                @Html.DisplayNameFor(model => model.Fornecedor.Nome)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Valor)
            </td>
            <td class="text-center">
                @Html.DisplayNameFor(model => model.Ativo)
            </td>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fornecedor.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td class="text-right">
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil-alt"></span></a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
            </td>
        </tr>
    }
    </tbody>
</table>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

